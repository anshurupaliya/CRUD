<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/StyleSheet.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/fontawesome.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=account_circle" />
</head>
<body>
    <div class="bs-example">
        <nav class="navbar navbar-expand-lg navbar navbar-dark bg-primary">
            <a href="#" class="navbar-brand"><img src="~/logo1.png" height="50" width="50" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse1" aria-controls="navbarCollapse1" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse1">
                <div class="navbar-nav">
                    <a href="/" class="nav-item nav-link active">Home</a>
                    <a href="/person" class="nav-item nav-link active">Person</a>
                    <a href="/person/create" class="nav-item nav-link active">Create Person</a>
                    <a href="/country/create" class="nav-item nav-link active">Create Country</a>
                    @* <div class="nav-item dropdown"> *@
                    @*     <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdownMenuLink" *@
                    @*        data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> *@
                    @*         Features *@
                    @*     </a> *@
                    @*     <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink"> *@
                    @*         <a class="dropdown-item" href="#">Feature1</a> *@
                    @*         <a class="dropdown-item" href="#">Feature2</a> *@
                    @*         <a class="dropdown-item" href="#">Feature3</a> *@
                    @*     </div> *@
                    @* </div> *@
                </div>
                <div class="navbar-nav ms-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Login" class="nav-item nav-link active">Login</a>
                        <a asp-controller="Account" asp-action="Register" class="nav-item nav-link active">Register</a>
                    }
                    else
                    {
                        @* <div class="nav-item nav-link active">Welcome! @User.Identity.Name</div> *@
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdownMenuLink"
                               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="material-symbols-outlined">
                                    account_circle  <!-- Example icon for account -->
                                </span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                @if(User.IsInRole("Admin")){
                                    <a class="dropdown-item" asp-action="Index" asp-controller="Home" asp-area="Admin">Admin Panel</a>
                                }
                                <!-- Link to Logout action -->
                                <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
                                <!-- Link to DeleteAccount action -->
                                <a class="dropdown-item" asp-action="DeleteAccount" asp-controller="Account">Delete Account</a>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </nav>
    </div>

    <div class="container">
        @RenderBody()
    </div>
    <script src="~/Script.js"></script>
    <div>
        @RenderSection("Script", false)
    </div>
</body>
</html>
