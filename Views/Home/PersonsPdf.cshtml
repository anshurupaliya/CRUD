@using CRUD.DbContext
@{
    Layout = null;
}
@using static CRUD.Services.PersonService
@model IEnumerable<Person>
@{
    string classcolor = "bg-light";
}

<link rel="stylesheet" href="@("http://"+Context.Request.Host.ToString()+"/StyleSheet.css")" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/fontawesome.min.css" crossorigin="anonymous" />

<div class="container">
    <div class="container">
        <h1 class="text-center">LIST OF PERSONS</h1>
    </div>
    <div class="responsive-table">
        <table class="table table-hover ">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Guid</th>
                    <th>Email</th>
                    <th>Country</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var a in Model)
                {
                    <tr class="@classcolor">
                        <td>@a.FirstName</td>
                        <td>@a.LastName</td>
                        <td>@a.Email</td>
                        <td>@a.CountryObject.Name</td>
                    </tr>

                    if (classcolor == "bg-light")
                    {
                        classcolor = "";
                    }
                    else
                    {
                        classcolor = "bg-light";
                    }
                }

            </tbody>
        </table>

    </div>
</div>